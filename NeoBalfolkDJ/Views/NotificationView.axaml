<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NeoBalfolkDJ.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="60"
             x:Class="NeoBalfolkDJ.Views.NotificationView"
             x:DataType="vm:NotificationViewModel"
             Width="400"
             Height="60"
             IsHitTestVisible="{Binding IsVisible}">
    
    <Design.DataContext>
        <vm:NotificationViewModel/>
    </Design.DataContext>
    
    <Border Background="{Binding BackgroundColor}"
            IsVisible="{Binding IsVisible}"
            Opacity="{Binding Opacity}"
            Padding="12,8"
            CornerRadius="4"
            Cursor="Hand"
            PointerPressed="OnPointerPressed">
        <TextBlock Text="{Binding Message}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="White"
                   FontWeight="SemiBold"
                   FontSize="14"
                   TextWrapping="Wrap"
                   TextAlignment="Center"/>
    </Border>
</UserControl>
