                ToolTip.Tip="Request stop"
                Padding="8"
                IsVisible="{Binding !IsHistoryMode}">
            <PathIcon Data="M18,18H6V6H18V18Z"
                      Width="16" Height="16"/>
        </Button>
        <Button Command="{Binding RequestDelayCommand}"
                ToolTip.Tip="Request delay"
                Padding="8"
                IsVisible="{Binding !IsHistoryMode}">
            <PathIcon Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"
                      Width="16" Height="16"/>
        </Button>
        <Button Command="{Binding RequestMessageCommand}"
                ToolTip.Tip="Request message"
                Padding="8"
                IsVisible="{Binding !IsHistoryMode}">
            <PathIcon Data="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"
                      Width="16" Height="16"/>
        </Button>
