                ToolTip.Tip="Remove item from queue"
                Padding="8"
                IsVisible="{Binding !IsHistoryMode}">
            <PathIcon Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                      Width="16" Height="16"/>
        </Button>
        <Button Command="{Binding ClearQueueCommand}"
                ToolTip.Tip="Clear entire queue"
                Padding="8"
                IsVisible="{Binding !IsHistoryMode}">
            <PathIcon Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                      Width="16" Height="16"/>
        </Button>
        
        <Rectangle Width="1" Fill="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" Margin="4,4"
                   IsVisible="{Binding IsHistoryMode}"/>
        
        <!-- History mode buttons -->
        <Button Command="{Binding ExportHistoryCommand}"
                ToolTip.Tip="Export history to JSON"
                Padding="8"
                IsVisible="{Binding IsHistoryMode}">
            <PathIcon Data="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z"
                      Width="16" Height="16"/>
        </Button>
        <Button Command="{Binding ClearHistoryCommand}"
                ToolTip.Tip="Clear history"
                Padding="8"
                IsVisible="{Binding IsHistoryMode}">
            <PathIcon Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                      Width="16" Height="16"/>
